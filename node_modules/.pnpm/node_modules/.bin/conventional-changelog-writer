#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/data/data/com.termux/files/home/yz/node_modules/.pnpm/conventional-changelog-writer@7.0.1/node_modules/conventional-changelog-writer/node_modules:/data/data/com.termux/files/home/yz/node_modules/.pnpm/conventional-changelog-writer@7.0.1/node_modules:/data/data/com.termux/files/home/yz/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/data/data/com.termux/files/home/yz/node_modules/.pnpm/conventional-changelog-writer@7.0.1/node_modules/conventional-changelog-writer/node_modules:/data/data/com.termux/files/home/yz/node_modules/.pnpm/conventional-changelog-writer@7.0.1/node_modules:/data/data/com.termux/files/home/yz/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../conventional-changelog-writer/cli.mjs" "$@"
else
  exec node  "$basedir/../conventional-changelog-writer/cli.mjs" "$@"
fi
